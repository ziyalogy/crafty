<?xml version="1.0" encoding="utf-8"?>
<form>
    <title>Features Intro Style 4</title>
	<sampledata></sampledata>
	<fields name="features-intro">
		<fieldset name="basic" label="FEATURES_BASIC_LABEL" description="FEATURES_BASIC_DESC">
		<field name="impact_text" type="textarea" default="" label="FEATURES_DESCRIPTION_ITEM_LABEL" description="FEATURES_DESCRIPTION_ITEM_DESC" rows="5" cols="40" />
			<field name="columns" type="list" label="FEATURES_COLUMNS_LABEL" description="FEATURES_COLUMNS_DESC" >
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="5">5</option>
				<option value="6">6</option>
			</field>
		</fieldset>
			
		<fieldset name="section-features" label="FEATURES_SECTION_LABEL" description="FEATURES_SECTION_DESC" multiple="1">
			<field name="img-intro" type="media" default="" label="FEATURES_IMAGE_LABEL" description="FEATURES_IMAGE_DESC"  />
			<field name="img-icon" type="media" default="" label="FEATURES_IMAGE_ICON_LABEL" description="FEATURES_IMAGE_ICON_DESC"  />

			<field name="title" type="text" default="" size="40" label="FEATURES_TITLE_LABEL" description="FEATURES_TITLE_DESC" required="1" />
			<field name="description" type="textarea" default="" label="FEATURES_DESCRIPTION_ITEM_LABEL" description="FEATURES_DESCRIPTION_ITEM_DESC" rows="5" cols="40" />
			<field name="link" type="text" default="" label="FEATURES_LINK_LABEL" description="FEATURES_LINK_DESC" rows="5" cols="40" />
			<field name="link-title" type="text" default="" label="FEATURES_LINK_TITLE_LABEL" description="FEATURES_LINK_TITLE_DESC" rows="5" cols="40" />
		</fieldset>
		
  </fields>
</form>